<% if (alert == "introduction_second") { %>
    <div id= "alert_Custom" class="alert alert-success" role="alert">
        hover and click episode to read book.   
    </div>
<% } %>

<% tasks.forEach((task, index) => { %>
    <table id="table_ref" class="table table-bordered table-dark">
        <tr>
            <td id="table_ref-ukuran_cover" rowspan="4" ><img width="220px" height="360px" src="<%= task.cover %>"></td>
            <td id="table_ref_title_book_table">
                <%= task.title %>
            </td>
        </tr>
        <tr>
            <td id="table_ref_last_chapter_table" colspan="2">
                <form action="" method="post">
                    <%= task.html_book %>
                </form>
            </td>
        </tr>
        <tr>
            <td id="table_ref_genre_table" colspan="2"><%= task.genre %></td>
        </tr>
        <tr>
            <td id="table_ref_description_table" colspan="2"><%= task.description %></td>
        </tr>
    </table>
<% }) %>
<h3 align="center"> Episode </h3>
<% episodes.forEach((episode, index) => { %>
    <form id="test" action="/l_read_book" method="post">
        <input type="hidden" name ="link_episode"value="<%= episode.html_book %>">
        <button id="button_episode"><%= episode.title_episode %></button>
    </form>
<% }) %>
