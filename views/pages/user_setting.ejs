<% if (alert == "change_password_ide") { %>
    <div id= "alert_Custom" class="alert alert-danger" role="alert">
        your new password and new confirm password isn't identical.
    </div>
<% } else if (alert == "change_password_old") { %>
    <div id= "alert_Custom" class="alert alert-danger" role="alert">
        your old password incorrect.
    </div>
<% } else if (alert == "change_nickname") { %>
    <div id= "alert_Custom" class="alert alert-success" role="alert">
        your nickname has been changed.
    </div>
<% } else if (alert == "change_white_theme") { %>
    <div id= "alert_Custom" class="alert alert-info" role="alert">
        your theme is white now.
    </div>
    <% } else if (alert == "change_black_theme") { %>
        <div id= "alert_Custom" class="alert alert-info" role="alert">
            your theme is black now.
        </div>
<% } %>

